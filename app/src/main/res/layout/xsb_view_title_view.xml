<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/fl_view_title"
             android:layout_width="match_parent"
             android:layout_height="72dp"
             android:background="#0ff034"
             android:elevation="6dp"
             android:paddingTop="24dp">

    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imb_left_one"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:src="@mipmap/xsb_view_return_btn"/>

        <ImageButton
            android:id="@+id/imb_left_two"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:src="@mipmap/xsb_view_return_btn"
            android:visibility="gone"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_right_one"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="确认"/>

        <ImageButton
            android:id="@+id/imb_right_one"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/imb_right_two"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_right_two"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="确认"/>

    </LinearLayout>


    <TextView
        android:id="@+id/xsb_title_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="#ffffff"
        android:textSize="14sp"
        tools:text="标题标题标题标题"/>

</FrameLayout>